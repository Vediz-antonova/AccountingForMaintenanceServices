<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.MainPage">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="15">
        <Button 
            Text="Регистрация" 
            BackgroundColor="LightBlue" 
            WidthRequest="200" 
            HeightRequest="60"
            FontSize="20"
            Clicked="OnRegisterClicked"/>
        <Button 
            Text="Вход" 
            BackgroundColor="LightBlue" 
            WidthRequest="200" 
            HeightRequest="60"
            FontSize="20"
            Clicked="OnLoginClicked"/>

        <!-- Добавьте дополнительные кнопки для навигации -->
    </StackLayout>
</ContentPage>
