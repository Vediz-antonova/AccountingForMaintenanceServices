<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.MaintenancePage">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <StackLayout Grid.Row="0" Orientation="Horizontal" Padding="10" Spacing="10">
      <Label Text="Книга ТО"
             FontSize="24"
             VerticalOptions="Center" />
      <!-- Выпадающий список для выбора автомобиля -->
      <Picker x:Name="CarPicker"
              Title="Авто"
              HorizontalOptions="FillAndExpand" 
              VerticalOptions="Center"
              SelectedIndexChanged="CarPicker_SelectedIndexChanged" />
      <Button Text="+"
              HorizontalOptions="End"
              VerticalOptions="Center" 
              TextColor="Aquamarine"
              BackgroundColor="Transparent"
              CornerRadius="25"
              HeightRequest="55"
              WidthRequest="55"
              FontSize="Large"
              Clicked="OnCarCreateClicked"/>
      <Button Text="🗑"
              HorizontalOptions="End"
              VerticalOptions="Center" 
              BackgroundColor="Transparent"
              CornerRadius="25"
              HeightRequest="55"
              WidthRequest="55"
              FontSize="Large"
              Clicked="OnCarDeleteClicked"/>
    </StackLayout>

    <!-- Список задач обслуживания -->
    <CollectionView x:Name="MaintenanceCollectionView" Grid.Row="1" Margin="10">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <Grid Padding="10" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Иконка задачи -->
            <!--<Image Source="{Binding Icon}" 
                   WidthRequest="40" 
                   HeightRequest="40" /> -->
            <!-- Дата и описание задачи -->
            <StackLayout Grid.Column="1" VerticalOptions="Center">
              <Label Text="{Binding Date, StringFormat='{0:dd.MM.yyyy}'}"
                     FontAttributes="Bold" />
              <Label Text="{Binding Category}" />
            </StackLayout>
          </Grid>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>

    <!-- Нижняя панель навигации -->
    <Grid Grid.Row="2" Padding="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      
      <!-- Раздел "ТО и ремонт" -->
      <StackLayout Grid.Column="0" HorizontalOptions="Center">
        <Label Text="ТО и ремонт" FontSize="14" HorizontalOptions="Center" />
      </StackLayout>
      <!-- Раздел "Ближайшее СТО" -->
      <StackLayout Grid.Column="1" HorizontalOptions="Center">
        <Label Text="Ближайшее СТО" FontSize="14" HorizontalOptions="Center" />
      </StackLayout>
      <!-- Раздел "Напоминания" -->
      <StackLayout Grid.Column="2" HorizontalOptions="Center">
        <Label Text="Напоминания" FontSize="14" HorizontalOptions="Center" />
      </StackLayout>
      <!-- Раздел "Отчеты" -->
      <StackLayout Grid.Column="3" HorizontalOptions="Center">
        <Label Text="Отчеты" FontSize="14" HorizontalOptions="Center" />
      </StackLayout>
      <StackLayout Grid.Column="4" HorizontalOptions="Center">
        <!-- Плавающая кнопка "Плюс" для добавления записи -->
        <Button Text="+"
                FontSize="26"
                BackgroundColor="LightCoral"
                FontAttributes="Bold"
                TextColor="White"
                CornerRadius="30"
                WidthRequest="60"
                HeightRequest="60"
                Clicked="OnMaintenanceClicked"/> 
      </StackLayout>
    </Grid>
  </Grid>
</ContentPage>