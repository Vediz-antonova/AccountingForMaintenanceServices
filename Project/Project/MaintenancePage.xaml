<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.MaintenancePage">
    
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <StackLayout Grid.Row="0" Orientation="Horizontal" Padding="10" Spacing="10">
      <Label Text="Книга ТО"
             FontSize="24"
             VerticalOptions="Center" />
      <!-- Выпадающий список для выбора автомобиля -->
      <Picker x:Name="CarPicker"
              Title="Авто"
              HorizontalOptions="Center"
              VerticalOptions="Center" />
      <!-- Кнопка добавления авто, отображается при открытии списка -->
      <Button Text="Добавить авто"
              HorizontalOptions="Center"
              VerticalOptions="Center" 
              Clicked="OnCarCreateClicked"/>
      <Button Text="Удалить авто"
              HorizontalOptions="End"
              VerticalOptions="Center" 
              Clicked="OnCarDeleteClicked"/>
    </StackLayout>

    <!-- Список задач обслуживания -->
    <CollectionView Grid.Row="1"
                    Margin="10">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <Grid Padding="10" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Иконка задачи -->
            <Image Source="{Binding Icon}" 
                   WidthRequest="40" 
                   HeightRequest="40" />
            <!-- Дата и описание задачи -->
            <StackLayout Grid.Column="1" VerticalOptions="Center">
              <Label Text="{Binding Date, StringFormat='{0:dd.MM.yyyy}'}"
                     FontAttributes="Bold" />
              <Label Text="{Binding Description}" />
            </StackLayout>
          </Grid>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>

    <!-- Нижняя панель навигации -->
    <Grid Grid.Row="2"
          Padding="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      
      <!-- Раздел "ТО и ремонт" -->
      <StackLayout Grid.Column="0" HorizontalOptions="Center">
        <Label Text="ТО и ремонт" FontSize="14" HorizontalOptions="Center" />
      </StackLayout>
      <!-- Раздел "Напоминания" -->
      <StackLayout Grid.Column="1" HorizontalOptions="Center">
        <Label Text="Напоминания" FontSize="14" HorizontalOptions="Center" />
      </StackLayout>
      <!-- Раздел "Отчеты" -->
      <StackLayout Grid.Column="2" HorizontalOptions="Center">
        <Label Text="Отчеты" FontSize="14" HorizontalOptions="Center" />
        <!-- Плавающая кнопка "Плюс" для добавления записи.-->
        <Button Text="+"
                FontSize="26"
                BackgroundColor="LightCoral"
                FontAttributes="Bold"
                TextColor="White"
                CornerRadius="30"
                WidthRequest="60"
                HeightRequest="60"
                VerticalOptions="Center"
                TranslationY="-90" 
                HorizontalOptions="End"/> 
      </StackLayout>
    </Grid>
  </Grid>
</ContentPage>